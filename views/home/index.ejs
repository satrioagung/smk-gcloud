    <!-- Visi Misi -->
    <section id="visi">
        <div class="container mt-3">
            <div class="row text-center">
                <div class="col-md">
                    <H2>Visi Misi</H2>
                </div>
            </div>
            <div class="row justify-content-around">
                <% for(data of datas[0]){ %>
                    <div class="col-md">
                        <h3 class="text-center">
                            <%= data.nama_visimisi %>
                        </h3>
                        <%- data.detail_visimisi %>
                    </div>
