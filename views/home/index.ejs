    <!-- Hero -->
    <section id="hero" class="bg-primary text-light">
        <div class="container mt-5">
            <div class="row align-items-center">
                <div class="col-md">
                    <H1>SMK Bintang Sembilan</H1>
                    <p class="fs-5">Pelayanan Prima, Unggul dalam Mutu, Tinggi dalam Prestasi
                        SMK BINTANG SEMBILAN : “Istimewa, Pasti Bisa, Tentu Hebat” </p>
                </div>
                <div class="col-md text-center">
                    <img src="/assets/images/logo.png" alt="Logo SMK Bintang Sembilan" width="300">
                </div>
            </div>
        </div>
