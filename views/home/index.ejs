    <!-- Sambiutan -->
    <section id="sambutan" class="bg-primary text-light">
        <div class="container mt-3">
            <div class="row align-items-center">
                <% for( data of datas[1] ) { %>
                    <div class="col-md text-center">
                        <img src="https://storage.googleapis.com/agungsatrio/sambutan/<%= data.foto_sambutan %>"
                            alt="foto sambutan SMK Bintang Sembilan" width="300">
                    </div>
                    <div class="col-md">
                        <H2>
                            <%= data.nama_sambutan %>
                        </H2>
                        <p>
                            <%- data.detail_sambutan %>
                        </p>
                    </div>
                    <% } %>
            </div>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
