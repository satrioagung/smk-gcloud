    <!-- Kejuruan -->
    <section id="kejuruan">
        <div class="container mt-3">
            <div class="data text-center">
                <div class="col-md">
                    <H2>Kejuruan & Ekstrakurikuler</H2>
                </div>
            </div>
            <div class="row justify-content-around">
                <% for(data of datas[2]){ %>
                    <div class="col-md-3">
                        <h3 class="text-center">
                            <%= data.nama_kejuruan %>
                        </h3>
                        <p>
                            <%- data.detail_kejuruan %>
                        </p>
                    </div>
                    <% } %>
            </div>
        </div>
    </section>
    <!-- Akhir Kejuruan -->

    <!-- Berita -->
    <section id="berita">
        <div class="container mt-3">
            <div class="row text-center">
                <div class="col-md">
                    <H2>Berita dan Pengumuman</H2>
                </div>
            </div>
            <div class="row justify-content-center mt-2">
                <% for(data of datas[3]) {%>
                    <div class="col-md-4 mt-2">
                        <div class="card">
                            <img src="https://storage.googleapis.com/agungsatrio/berita/<%= data.foto_berita %>"
                                class="card-img-top" alt="<%= data.nama_berita %>">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= data.nama_berita %>
                                </h5>
                                <p class="card-text">
                                    <%- data.detail_berita.substring(0, 100) %>...
                                </p>
                                <a class="btn btn-primary" href="/berita/<%= data.url_berita%>">Terus
                                    Membaca...</a>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </section>
    <!-- Akhir Berita -->

    <!-- Galeri -->
