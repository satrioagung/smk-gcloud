<%- include('layouts/header-edit') %>

    <h2 class="mt-3">Edit Berita</h2>
    <div class="table-responsive">
        <% for(data of datas) { %>
            <form action="<%= data.id_berita %>" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="namaberita" class="form-label">Nama</label>
                    <input type="text" class="form-control" name="nama" value="<%= data.nama_berita %>">
                </div>
                <div class="mb-3">
                    <label for="detailberita" class="form-label">Detail Visi Misi</label>
                    <textarea class="form-control" name="detail" rows="10" id="tiny"><%= data.detail_berita %></textarea>
                </div>
                <div class="mb-3">
                    <label for="fotoBerita" class="form-label">Foto Berita</label>
                    <input class="form-control" type="file" name="foto">
                </div>
                <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupSelect01">Aktif Berita</label>
                    <select class="form-select" name="aktif">
                        <option value="yes">yes</option>
                        <option value="no">no</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mb-5">Update</button>
            </form>
            <% } %>
    </div>

    <%- include('layouts/footer') %>