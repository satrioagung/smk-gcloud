<%- include('layouts/header') %>

    <h2 class="mt-3">Daftar Kejuruan</h2>
    <div class="table-responsive">
        <table class="table table-bordered align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Detail</th>
                    <th scope="col">Ubah</th>
                </tr>
            </thead>
            <tbody>
                <% for(data of datas){ %>
                    <tr>
                        <td>
                            <% let no = datas.indexOf(data) %>
                            <%= no+1 %>
                        </td>
                        <td class="text-start">
                            <%= data.nama_kejuruan %>
                        </td>
                        <td class="text-start">
                            <%- data.detail_kejuruan %>
                        </td>
                        <td>
                            <a class="nav-link" href="/dashboard/editkejuruan/<%= data.id_kejuruan %>">
                                <span data-feather="edit"></span>
                            </a>
                        </td>
                    </tr>
            </tbody>
            <% } %>
        </table>
    </div>

    <%- include('layouts/footer') %>